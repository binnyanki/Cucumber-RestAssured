pipeline{

  agent any

  stages{

	stage('Build'){

		steps{
			echo "Building project"
			bat "mvn clean"

		}

	}
	stage('Test'){

		steps{
			echo "Test project"
			bat "mvn test"

		}

	}
	
	stage('Deploy'){

		steps{
			echo "Compiling project"
			bat "mvn verify"
			archiveArtifacts artifacts: '**/target/cucumber-html-reports/overview-features.html'

		}

	}

 }
  post{
  
	always{
		
		emailext(
			attachmentsPattern: '**/target/cucumber-html-reports/overview-features.html',
			subject: "Execution status",
			body: "See ${env.BUILD_URL} for more details",
			to: "bishalgiet@gmail.com",
			
		
		)
	}
 
 }

}
